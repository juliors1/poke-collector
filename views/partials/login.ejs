        <ul class="navbar-nav">
          <% if (user) { %>
          <li class="nav-item">
            <a class="nav-link" href="/pokemon/pokedex">Pokedex</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users">Trainer List</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/profile">My Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/auth/logout">Log Out</a>
          </li>
          <li class="nav-item">
            <img
              id="avatarPhoto"
              height="50"
              src="<%= user.avatar ? user.avatar : 'https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/866438ce-c99f-4c83-8110-4f6c907f2c68/d9qxpn9-8096a0d6-6576-45cb-a1b0-1ae2fc3b787d.png?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9.eyJzdWIiOiJ1cm46YXBwOiIsImlzcyI6InVybjphcHA6Iiwib2JqIjpbW3sicGF0aCI6IlwvZlwvODY2NDM4Y2UtYzk5Zi00YzgzLTgxMTAtNGY2YzkwN2YyYzY4XC9kOXF4cG45LTgwOTZhMGQ2LTY1NzYtNDVjYi1hMWIwLTFhZTJmYzNiNzg3ZC5wbmcifV1dLCJhdWQiOlsidXJuOnNlcnZpY2U6ZmlsZS5kb3dubG9hZCJdfQ.gUe-9VpsADc708NZfNlDDffeL_G7LFrHtFp1QZa3IzI'%>"

            />
          </li>
          <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/auth/google">Login with Google</a>
          </li>

          <% } %>
        </ul>
      </div>
    </nav>
    <div class="img-container">
      <img
        class="login-title-logo"
        src="/images/login-title.png"
        alt="PokeCollector"
      />
    </div>
  </body>
</html>
